# CareDraft Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# AI Model Configuration
# For fine-tuned models, use the format: ft:model:organization:identifier:job_id
# Example: ft:gpt-4o-mini:personal::ftjob-GEQ7rH6zO5uHGenTo81wAm2I
PRIMARY_OPENAI_MODEL=gpt-4o-mini
FALLBACK_OPENAI_MODEL=gpt-3.5-turbo

# Backup models (used if fine-tuned models fail)
BACKUP_PRIMARY_MODEL=gpt-4o-mini
BACKUP_FALLBACK_MODEL=gpt-3.5-turbo

# AI Configuration Options
AI_DEBUG_MODE=false
AI_LOG_REQUESTS=false
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=45000

# External Search APIs
SERPER_API_KEY=your_serper_api_key
TAVILY_API_KEY=your_tavily_api_key

# Email Service Configuration
RESEND_API_KEY=your_resend_api_key

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

